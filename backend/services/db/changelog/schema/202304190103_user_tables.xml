<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="202304190103-0" author="mkrolczyk">
        <createTable tableName="role" remarks="Used to store user roles">
            <column name="role_id" type="SMALLINT" remarks="The unique id to identify the role">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(15)" remarks="Role name">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP" remarks="Stores the date and time at which the role is created">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="202304190103-1" author="mkrolczyk">
        <createTable tableName="system_user" remarks="Used to store user information">
            <column name="user_id" type="BIGINT" autoIncrement="true" remarks="The unique id to identify the user">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)" remarks="The first name of the user">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="VARCHAR(50)" remarks="The last name of the user">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(50)" remarks="Username">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(100)" remarks="The password hash generated by the appropriate algorithm">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(50)" remarks="The email of the user. Used for login and registration purposes">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email_accepted" type="BOOLEAN" defaultValueBoolean="true" remarks="Used to check if the user has confirmed his email">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="VARCHAR(15)" remarks="The mobile number of the user">
                <constraints nullable="true"/>
            </column>
            <column name="user_intro" type="VARCHAR(100)" defaultValue="" remarks="The brief introduction of the User to be displayed on the user profile">
                <constraints nullable="true"/>
            </column>
            <column name="user_descr" type="VARCHAR(600)" defaultValue="" remarks="User own description to be displayed on the user profile">
                <constraints nullable="true"/>
            </column>
            <column name="notifications" type="BOOLEAN" defaultValueBoolean="true" remarks="Used to set whether the user wants to get app notifications. Default value is 'true'">
                <constraints nullable="false"/>
            </column>
            <column name="registered_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP" remarks="Used to calculate the life of the user with the application">
                <constraints nullable="false"/>
            </column>
            <column name="last_login" type="TIMESTAMP" remarks="Used to identify the last login time of the user">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="202304190103-3" author="mkrolczyk">
        <createIndex indexName="uq_email" tableName="system_user">
            <column name="email">
                <constraints unique="true"/>
            </column>
        </createIndex>
    </changeSet>

    <changeSet id="202304190103-4" author="mkrolczyk">
        <createTable tableName="user_role" remarks="Used to store user role">
            <column name="role_id" type="SMALLINT" remarks="The unique ID of the role">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT" remarks="The unique ID of the user">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                constraintName="user_role_role_fk"
                baseTableName="user_role"
                baseColumnNames="role_id"
                referencedTableName="role"
                referencedColumnNames="role_id"
                onDelete="NO ACTION"
                onUpdate="NO ACTION"/>

        <addForeignKeyConstraint
                constraintName="user_role_user_fk"
                baseTableName="user_role"
                baseColumnNames="user_id"
                referencedTableName="system_user"
                referencedColumnNames="user_id"
                onDelete="NO ACTION"
                onUpdate="NO ACTION"/>

    </changeSet>

    <changeSet id="202304190103-5" author="mkrolczyk">
        <loadData file="data/role.csv" tableName="role" relativeToChangelogFile="true"/>
    </changeSet>
</databaseChangeLog>